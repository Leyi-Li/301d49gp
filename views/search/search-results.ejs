<!-- VAR camps is an array of objects that look like EXAMPLE: [{
  availabilityStatus: 'Available',
  contractID: CO,
  facilityID: '722031',
  facilityName: 'Fern Lake Campground &amp; RV Park',
  faciltyPhoto: 'http://www.reserveamerica.com/webphotos/INDP/pid722031/0/80x53.jpg',
  latitude: '37.0964306',
  longitude: '-88.69545',
  regionName: 'API unknown',
  reservationChannel: 'Web Reservable',
  shortName: 'GS1931',
  sitesWithAmps: 'Y',
  sitesWithPetsAllowed: 'Y',
  sitesWithSewerHookup: 'N',
  sitesWithWaterHookup: 'N',
  sitesWithWaterfront: 'API unknown',
  statestate: 'KY'
}] -->
<!-- VAR iconArr is injected EXAMPLE: 'assets/vector/vector-trunk.png' -->

<link rel="stylesheet" href="/styles/base.css">


<section class='search-results'>


  <% camps.forEach((camp, i) => { %>
  <section class='camp-summary' data-lat='<%- camp.latitude %>' data-lng='<%- camp.longitude %>'>

    <p class="camp-results"><%= camp.availabilityStatus %></p>
    <p class="camp-name" class="camp-results"><%- camp.facilityName %></p>
    <img class="thumbnail-image" src="<%= iconArr[i]  %>" alt="<%= camp.facilityName %>">

    <form action="/campground/<%= camp.facilityID %>/<%= camp.contractID %>" method="GET" id="details"
      class="camp-details-link">
      <button type='submit'>See Details</button>
    </form>

  </section>

  <% }) %>

</section>